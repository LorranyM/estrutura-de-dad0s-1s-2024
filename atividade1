#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    if (argc == 1) {
        printf("Erro: Nenhum número informado.\n");
        return 1;
    }

    int n = argc - 1;
    int *numero = (int*)malloc(n * sizeof(int));
    if (numero == NULL) {
        printf("Erro: Falha na alocação de memória.\n");
        return 1;
    }

    // Lendo os números fornecidos
    for (int i = 0; i < n; i++) {
        numero[i] = atoi(argv[i + 1]);
    }

    // Calculando a média
    double sum = 0.0;
    int min = numero[0];
    int max = numero[0];
    for (int i = 0; i < n; i++) {
        sum += numero[i];
        if (numero[i] < min) {
            min = numero[i];
        }
        if (numero[i] > max) {
            max = numero[i];
        }
    }
    double average = sum / n;

    // Ordenando os números em ordem crescente
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (numero[i] > numero[j]) {
                int temp = numero[i];
                numero[i] = numero[j];
                numero[j] = temp;
            }
        }
    }

    // Imprimindo os resultados
    printf("Quantidade de números recebidos: %d\n", n);
    printf("Valor médio dos números: %.1f\n", average);
    printf("Menor número: %d\n", min);
    printf("Maior número: %d\n", max);
    printf("Números em ordem crescente:");
    for (int i = 0; i < n; i++) {
        printf(" %d", numero[i]);
    }
    printf("\n");

    // Liberando a memória alocada
    free(numero);

    return 0;
}

